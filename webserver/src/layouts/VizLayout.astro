---
const { data, title, reverse } = Astro.props;
---
<div class=`flex items-center justify-center flex-col px-12 pb-10` style="margin-top:2em">
    <h1 class="text-3xl font-bold py-4">{title}</h1>

    <div class=`w-full flex md:${reverse ? "flex-row-reverse" : "flex-row"}`>
      <div class="w-1/3 divide-x p-6 flex flex-center items-center flex-col">
        <div class="h-full flex items-center">
          <code class="
          max-w-sm 
          p-10
          py-16
          font-bold
          text-gray-100
          h-min
          bg-indigo-400 dark:bg-indigo-500 border border-gray-200 rounded-lg drop-shadow dark:bg-gray-800 dark:border-gray-700">
            {Object.entries(data).map((key) => {
              return (
                <p>
                  <span class="bg-emerald-500 font-bold">{key[0]}</span>: {key[1]};
                </p>
              );
            })}
          </code>
        </div>
      </div>
      <div class="w-2/3">
        <slot /> 
    </div>
    </div>
  
    <div class="flex items-center justify-center flex-col pb-10" style="margin-top:2em">
